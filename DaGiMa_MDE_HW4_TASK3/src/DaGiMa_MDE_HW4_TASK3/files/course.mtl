<td>
[for(lan : String | aCourse.language) separator(', ')]
[lan /]
[/for]
</td>
</tr>
<tr>
<tr>
<td>
Teaching start:
</td>
<td>
[aCourse.teaching_period_start_day/]/[aCourse.teaching_period_start_month/]/[aCourse.teaching_period_start_year/]
</td>
</tr>
<tr>
<tr>
<td>
Teaching end:
</td>
<td>
[aCourse.teaching_period_end_day/]/[aCourse.teaching_period_end_month/]/[aCourse.teaching_period_end_year/]
</td>
</tr>
<tr>
</tbody>
</table>
</p>
<p>
<h2>Degree Courses</h2>
<table>
<thead>
<tr>
<td>Name</td>
<td>URL</td>
</tr>
</thead>
<tbody>
[for( deg : DegreeCourse | aCourse.degree_courses )]
<tr>
<td>
[deg.name /]
</td>
<td>
<a href="[deg.name /]-deg.html">link</a>
</td>
<tr>
[/for]
</tbody>
</table>
</p>

<p>
<h2>Teachers</h2>
<table>
<thead>
<tr>
<td>Name</td>
<td>URL</td>
</tr>
</thead>
<tbody>
[for( teac : Professor | aCourse.teachers )]
<tr>
<td>
[teac.surname /]
</td>
<td>
<a href="./professors/[teac.surname /]-[teac.name/].html">link</a>
</td>
<tr>
[/for]
</tbody>
</table>
</p>

<p>
<h2>Extra info</h2>
<table>
<thead>
<tr>
<td>Name</td>
<td>URL</td>
</tr>
</thead>
<tbody>
[for( inf : ExtraInfo | aCourse.extra_info )]
<tr>
<td>
[inf.name /]
</td>
<td>
<a href="./info/[inf.name /]">link</a>
</td>
<tr>
[/for]
</tbody>
</table>
</p>

<p>
<h2>Examination Call</h2>
<table>
<thead>
<tr>
<td>Name</td>
<td>URL</td>
</tr>
</thead>
<tbody>
[let i:Integer = 1/]
[for( ex : ExaminationCall | aCourse.calls )]
<tr>
<td>
[i /].[ex.date /]
[i = i + 1/]
</td>
<td>
<a href="./call/[ex.course.name /]-[ex.date /]">link</a>
</td>
<tr>
[/for]
</tbody>
</table>
</p>

</body>
</html>
[/file]
[/template]
